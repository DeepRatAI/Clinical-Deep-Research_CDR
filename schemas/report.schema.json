{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/DeepRatAI/Clinical-Deep-Research_CDR/blob/main/schemas/report.schema.json",
  "title": "CDR Report",
  "description": "JSON Schema for Clinical Deep Research report output (v0.1)",
  "type": "object",
  "required": [
    "run_id",
    "question",
    "pico",
    "disclaimer",
    "prisma_counts",
    "study_count",
    "claim_count",
    "snippet_count",
    "claims",
    "run_kpis",
    "status",
    "status_reason"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this pipeline run (short hash)"
    },
    "question": {
      "type": "string",
      "description": "Original clinical research question"
    },
    "pico": {
      "$ref": "#/$defs/PICO"
    },
    "search_plan": {
      "$ref": "#/$defs/SearchPlan"
    },
    "executed_searches": {
      "type": "array",
      "items": { "$ref": "#/$defs/ExecutedSearch" },
      "description": "PRISMA-S audit trail of searches actually executed"
    },
    "prisma_counts": {
      "$ref": "#/$defs/PRISMACounts"
    },
    "study_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of studies included after screening"
    },
    "claim_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of evidence claims generated"
    },
    "snippet_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of supporting snippets extracted"
    },
    "claims": {
      "type": "array",
      "items": { "$ref": "#/$defs/Claim" },
      "description": "Evidence claims with full traceability"
    },
    "rob2_summary": {
      "type": "array",
      "items": { "$ref": "#/$defs/RoB2Result" },
      "description": "Risk of Bias 2 assessments for RCT studies"
    },
    "robins_i_summary": {
      "type": "array",
      "items": { "$ref": "#/$defs/ROBINSIResult" },
      "description": "ROBINS-I assessments for non-randomized studies"
    },
    "verification_summary": {
      "type": "array",
      "items": { "$ref": "#/$defs/VerificationResult" },
      "description": "Per-claim verification results"
    },
    "run_kpis": {
      "$ref": "#/$defs/RunKPIs"
    },
    "composed_hypotheses": {
      "type": "array",
      "items": { "$ref": "#/$defs/ComposedHypothesis" },
      "description": "A+B⇒C compositional inferences"
    },
    "critique_findings": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of critique findings from skeptic agent"
    },
    "critique_blockers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Critical issues that may block publication"
    },
    "errors": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Runtime errors encountered during pipeline execution"
    },
    "disclaimer": {
      "type": "string",
      "description": "Clinical disclaimer — always present in every report output",
      "const": "⚠️ This report is machine-generated by CDR (Clinical Deep Research). It is NOT medical advice and should NOT be used for clinical decision-making. All findings require independent verification by qualified professionals. See DISCLAIMER.md for full terms."
    },
    "status": {
      "type": "string",
      "enum": ["completed", "insufficient_evidence", "unpublishable", "partially_publishable"],
      "description": "Final pipeline status"
    },
    "status_reason": {
      "type": "string",
      "description": "Machine-readable explanation for the status"
    },
    "final_answer": {
      "type": ["string", "null"],
      "description": "Final synthesized answer (may be degraded by enforcement)"
    },
    "evaluation_report": {
      "$ref": "#/$defs/EvaluationReport"
    }
  },
  "$defs": {
    "PICO": {
      "type": "object",
      "required": ["population", "intervention", "outcome"],
      "properties": {
        "population": { "type": "string", "minLength": 3 },
        "intervention": { "type": "string", "minLength": 3 },
        "comparator": { "type": ["string", "null"] },
        "comparator_source": {
          "type": "string",
          "enum": ["user_specified", "assumed_from_question", "inferred_from_evidence", "heuristic", "not_applicable"]
        },
        "outcome": { "type": "string", "minLength": 3 },
        "study_types": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "SearchPlan": {
      "type": "object",
      "properties": {
        "pubmed_query": { "type": ["string", "null"] },
        "ct_gov_query": { "type": ["string", "null"] },
        "date_range": {
          "type": ["array", "null"],
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 2
        },
        "languages": {
          "type": "array",
          "items": { "type": "string" }
        },
        "max_results_per_source": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        },
        "created_at": { "type": "string", "format": "date-time" }
      }
    },
    "ExecutedSearch": {
      "type": "object",
      "required": ["database", "query_executed"],
      "properties": {
        "database": { "type": "string" },
        "query_planned": { "type": ["string", "null"] },
        "query_executed": { "type": "string" },
        "executed_at": { "type": ["string", "null"], "format": "date-time" },
        "results_count": { "type": "integer", "minimum": 0 },
        "results_fetched": { "type": "integer", "minimum": 0 },
        "notes": { "type": ["string", "null"] }
      }
    },
    "PRISMACounts": {
      "type": "object",
      "required": ["records_identified", "studies_included"],
      "properties": {
        "records_identified": { "type": "integer", "minimum": 0 },
        "records_from_pubmed": { "type": "integer", "minimum": 0 },
        "records_from_clinical_trials": { "type": "integer", "minimum": 0 },
        "records_from_other": { "type": "integer", "minimum": 0 },
        "duplicates_removed": { "type": "integer", "minimum": 0 },
        "records_screened": { "type": "integer", "minimum": 0 },
        "records_excluded_screening": { "type": "integer", "minimum": 0 },
        "records_excluded": { "type": "integer", "minimum": 0 },
        "screening_exclusion_reasons": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        },
        "reports_sought": { "type": "integer", "minimum": 0 },
        "reports_not_retrieved": { "type": "integer", "minimum": 0 },
        "reports_assessed": { "type": "integer", "minimum": 0 },
        "reports_excluded": { "type": "integer", "minimum": 0 },
        "records_excluded_enforcement": { "type": "integer", "minimum": 0 },
        "enforcement_exclusion_reasons": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        },
        "studies_included": { "type": "integer", "minimum": 0 },
        "exclusion_reasons": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        }
      }
    },
    "Claim": {
      "type": "object",
      "required": ["claim_id", "claim_text", "certainty", "supporting_snippet_ids"],
      "properties": {
        "claim_id": { "type": "string" },
        "claim_text": { "type": "string", "minLength": 20, "maxLength": 1000 },
        "certainty": {
          "type": "string",
          "enum": ["high", "moderate", "low", "very_low"]
        },
        "supporting_snippet_ids": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Every claim MUST have at least one supporting snippet"
        },
        "conflicting_snippet_ids": {
          "type": "array",
          "items": { "type": "string" }
        },
        "limitations": {
          "type": "array",
          "items": { "type": "string" }
        },
        "grade_rationale": {
          "type": "object",
          "properties": {
            "risk_of_bias": { "type": "string" },
            "inconsistency": { "type": "string" },
            "indirectness": { "type": "string" },
            "imprecision": { "type": "string" },
            "publication_bias": { "type": "string" }
          }
        },
        "studies_supporting": { "type": "integer", "minimum": 0 },
        "studies_conflicting": { "type": "integer", "minimum": 0 },
        "linked_records": {
          "type": "array",
          "items": { "type": "string" }
        },
        "linked_rob2": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "record_id": { "type": "string" },
              "overall_judgment": { "type": ["string", "null"] },
              "overall_rationale": { "type": ["string", "null"] }
            }
          }
        }
      }
    },
    "RoB2Result": {
      "type": "object",
      "required": ["record_id", "overall_judgment", "overall_rationale", "domains"],
      "properties": {
        "record_id": { "type": "string" },
        "overall_judgment": {
          "type": "string",
          "enum": ["low", "some_concerns", "high"]
        },
        "overall_rationale": { "type": "string", "minLength": 10 },
        "domains": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["domain", "judgment", "rationale"],
            "properties": {
              "domain": {
                "type": "string",
                "enum": [
                  "randomization_process",
                  "deviations_from_intended_interventions",
                  "missing_outcome_data",
                  "measurement_of_outcome",
                  "selection_of_reported_result"
                ]
              },
              "judgment": {
                "type": "string",
                "enum": ["low", "some_concerns", "high"]
              },
              "rationale": { "type": "string" }
            }
          },
          "minItems": 5,
          "maxItems": 5
        }
      }
    },
    "ROBINSIResult": {
      "type": "object",
      "required": ["record_id", "overall_judgment", "overall_rationale", "domains"],
      "properties": {
        "record_id": { "type": "string" },
        "overall_judgment": {
          "type": "string",
          "enum": ["low", "moderate", "serious", "critical", "no_information"]
        },
        "overall_rationale": { "type": "string", "minLength": 10 },
        "domains": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["domain", "judgment", "rationale"],
            "properties": {
              "domain": {
                "type": "string",
                "enum": [
                  "bias_due_to_confounding",
                  "bias_in_selection_of_participants",
                  "bias_in_classification_of_interventions",
                  "bias_due_to_deviations_from_intended_interventions",
                  "bias_due_to_missing_data",
                  "bias_in_measurement_of_outcomes",
                  "bias_in_selection_of_reported_result"
                ]
              },
              "judgment": {
                "type": "string",
                "enum": ["low", "moderate", "serious", "critical", "no_information"]
              },
              "rationale": { "type": "string" }
            }
          },
          "minItems": 7,
          "maxItems": 7
        }
      }
    },
    "VerificationResult": {
      "type": "object",
      "required": ["claim_id", "overall_status", "overall_confidence"],
      "properties": {
        "claim_id": { "type": "string" },
        "overall_status": {
          "type": "string",
          "enum": ["verified", "partial", "contradicted", "unverifiable"]
        },
        "overall_confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "checks_count": { "type": "integer", "minimum": 0 }
      }
    },
    "RunKPIs": {
      "type": "object",
      "properties": {
        "snippet_coverage": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "verification_coverage": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "claims_with_evidence_ratio": { "type": "number", "minimum": 0.0 },
        "total_claims": { "type": "integer", "minimum": 0 },
        "verified_claims": { "type": "integer", "minimum": 0 },
        "unverified_claims": { "type": "integer", "minimum": 0 },
        "is_negative_outcome": { "type": "boolean" },
        "dod_level": { "type": "integer", "minimum": 1, "maximum": 3 }
      }
    },
    "ComposedHypothesis": {
      "type": "object",
      "required": ["hypothesis_id", "hypothesis_text", "source_claim_ids", "confidence_score"],
      "properties": {
        "hypothesis_id": { "type": "string" },
        "hypothesis_text": { "type": "string" },
        "source_claim_ids": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2
        },
        "confidence_score": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "strength": {
          "type": "string",
          "enum": ["strong", "moderate", "weak"]
        },
        "reasoning_trace": { "type": "string" }
      }
    },
    "EvaluationReport": {
      "type": "object",
      "properties": {
        "run_id": { "type": "string" },
        "dod_level": { "type": "integer" },
        "overall_pass": { "type": "boolean" },
        "summary": { "type": "string" },
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "value", "threshold", "status"],
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "number" },
              "threshold": { "type": "number" },
              "status": {
                "type": "string",
                "enum": ["pass", "fail", "warn", "n/a"]
              },
              "details": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
