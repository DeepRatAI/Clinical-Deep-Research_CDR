{
  "version": "1.0",
  "description": "CDR Regression Dataset - Minimal cases for CI verification",
  "created_at": "2026-01-22",
  "test_cases": [
    {
      "id": "REG-001",
      "name": "Basic PICO parsing",
      "question": "Does aspirin reduce cardiovascular events in adults?",
      "expected": {
        "pico_parsed": true,
        "population_contains": "adult",
        "intervention_contains": "aspirin",
        "outcome_contains": "cardiovascular"
      }
    },
    {
      "id": "REG-002",
      "name": "Empty results handling",
      "question": "Does XYZ12345 cure ABC98765?",
      "expected": {
        "status": "insufficient_evidence",
        "no_claims": true,
        "prisma_counts_present": true
      }
    },
    {
      "id": "REG-003",
      "name": "Composition with sufficient claims",
      "question": "Does metformin combined with GLP-1 agonists improve glycemic control?",
      "expected": {
        "composition_enabled": true,
        "dod_level": 3
      },
      "mock_claims": [
        {
          "claim_id": "c1",
          "claim_text": "Metformin reduces HbA1c by 1.5%",
          "supporting_snippet_ids": ["s1"]
        },
        {
          "claim_id": "c2", 
          "claim_text": "GLP-1 agonists reduce HbA1c by 1.2%",
          "supporting_snippet_ids": ["s2"]
        },
        {
          "claim_id": "c3",
          "claim_text": "Combination therapy reduces HbA1c by 2.0%",
          "supporting_snippet_ids": ["s3"]
        }
      ]
    }
  ],
  "quality_thresholds": {
    "snippet_coverage": 1.0,
    "verification_coverage_dod2": 0.8,
    "verification_coverage_dod3": 0.95,
    "composition_rate_dod3": 0.1
  }
}
